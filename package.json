{
  "name": "@rockstat/rock-me-ts",
  "version": "2.0.1",
  "description": "Package contains Agnostic JSON-RPC2 client/server implementation and other Rockstat requirements for microservice development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "start": "ts-node-dev -r 'tsconfig-paths/register' ./src/index.ts | pino",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "prod": "node dist/index",
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json -t stylish -p ./tsconfig.json",
    "security-check": "nsp check",
    "watch": "tsc -w",
    "pub": "npm publish --access public",
    "patch": "yarn version --loose-semver --new-version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rockstat/rock-me-ts.git"
  },
  "author": "Dmitry Rodin <madiedinro@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/rockstat/rock-me-ts/issues"
  },
  "files": [
    ".editorconfig",
    ".gitignore",
    "LICENSE",
    "package-lock.json",
    "package.json",
    "README.md",
    "tsconfig.json",
    "yarn.lock",
    "@types/**",
    "dist/**",
    "src/**"
  ],
  "homepage": "https://rstat.org",
  "dependencies": {
    "@types/bluebird": "^3.5.38",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.1",
    "@types/glob": "^8.0.1",
    "@types/js-yaml": "^4.0.5",
    "@types/lru-cache": "^7.10.10",
    "@types/node": "^18.13.0",
    "@types/pino": "^7.0.5",
    "@types/statsd-client": "^0.4.3",
    "bluebird": "^3.7.2",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "eventemitter3": "^5.0.0",
    "flake-idgen": "^1.1.0",
    "glob": "^8.1.0",
    "int64-buffer": "^1.0.1",
    "js-yaml": "^4.1.0",
    "lru-cache": "^7.14.1",
    "merge-options": "^3.0.4",
    "pino": "^8.10.0",
    "redis-fast-driver": "^2.2.4",
    "statsd-client": "^0.4.7",
    "xxhash": "^0.3.0"
  },
  "devDependencies": {
    "rimraf": "^4.1.2",
    "source-map-support": "^0.5.21",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  }
}
